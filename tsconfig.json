{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": true,
      "noLib": false,
      "declaration": true,
      "outDir": "dist"
  },
  "exclude": [
      "node_modules",
      "dist"
  ],
  "include": [
      "*.ts",
      "typescript/*.ts",
      "src/**/*"
  ]
}
